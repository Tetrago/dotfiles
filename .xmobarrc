Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
          , borderColor = "black"
          , border = TopB
          , bgColor = "black"
          , fgColor = "grey"
          , allDesktops = True
          , persistent = True
          , position = TopW L 100
          , commands = [ Run Cpu [ "-L", "3", "-H", "50", "--normal", "green", "--high", "red" ] 10
                          , Run Memory [ "-t", "Mem: <usedratio>%"] 10
                          , Run MultiCoreTemp [ "-t", "Temp: <avg>C", "-L", "45", "-H", "70", "--low", "green", "--high", "red" ] 50
                          , Run Date "%a %b %_d %Y" "date" 10
                          , Run Date "%I:%M %p" "time" 10
                          , Run StdinReader
                          ]
          , sepChar = "%"
          , alignSep = "}{"
          , template = "%cpu% | %memory% | %multicoretemp% | %StdinReader%}<fc=#3ec5bb>%date%</fc> %time%{"
          }
